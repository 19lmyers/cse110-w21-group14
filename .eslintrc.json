{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "google"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "brace-style": ["error", "stroustrup", {
            "allowSingleLine": true
        }],
        "indent": ["error", 4],
        "max-len": ["error", {
            "code": 100,
            "tabWidth": 4,
            "ignoreComments": true,
            "ignoreUrls": true
        }],
        "no-trailing-spaces": {
            "skipBlankLines": true,
            "ignoreComments": true
        },
        "padded-blocks": "off",
        "prefer-const": "off",
        "quotes": ["error", "single", {
            "avoidEscape": true,
            "allowTemplateLiterals": true
        }],
        "require-jsdoc": ["error", {
            "require": {
                "FunctionDeclaration": true,
                "ClassDeclaration": false,
                "MethodDefinition": false,
                "ArrowFunctionExpression": false,
                "FunctionExpression": true
            }
        }],
        "spaced-comment": ["error", "always", {
            "exceptions": ["-", "+", "*"]
        }]
    }
}
